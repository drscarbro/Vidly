@using Vidly.Controllers
@using Vidly.Models
@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@Html.ActionLink("Add Movie", "New", "Movies", new { @class="btn btn-primary"})

@if (!Model.Any())
{
    <p>No movies are here yet.</p>
}
else
{

    <table class="table table-bordered table-hover" style="margin-top: 5px">
        <thead>
            <tr>
                <th>Title</th>
                <th>Genre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@Html.ActionLink(movie.Title, "Edit", "Movies", new { id = movie.Id }, null)</td>

                    <td>@movie.Genre.Name</td>
                </tr>
            }
        </tbody>
    </table>
}