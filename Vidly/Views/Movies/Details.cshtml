@model Vidly.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>
<table class="table table-bordered table-hover">
    <thead>
    <tr>
        <th>Genre</th>
        <th>Release Date</th>
    </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Genre.Name</td>
            <td>@Model.ReleaseDate.ToShortDateString()</td>
        </tr>
    </tbody>
</table>

